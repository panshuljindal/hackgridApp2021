<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".profile"
    android:background="@color/fragment_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/profileHead1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/helveticaneue_medium"
            android:text="Profile"
            android:textColor="@color/timelineHeading"
            android:textSize="34dp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/profileLoginTxt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/robotomedium"
        android:gravity="center_horizontal"
        android:text="Login or Register\nTo view this Section"
        android:textAlignment="center"
        android:textColor="#c4c4c4"
        android:textSize="15dp" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/loginbtnbg"
        android:fontFamily="@font/helveticaneue_medium"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="14dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/problemItemTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_marginTop="35dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/helveticaneue_medium"
        android:text="@string/loginHackerEarth"
        android:textColor="#307FE2"
        android:textSize="14sp"
        android:textStyle="normal"
        />

</LinearLayout>