<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="160dp"
    android:orientation="vertical"
    android:layout_marginRight="10dp"
    android:background="@drawable/problembg"
    >
    <TextView
        android:id="@+id/problemItemTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="17dp"
        android:textSize="8dp"
        android:text="Healthcare"
        android:textColor="#307FE2"
        android:textStyle="bold"
        android:fontFamily="@font/robotoregular"
        />

    <TextView
        android:id="@+id/problemItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_goneMarginLeft="17dp"
        android:layout_marginLeft="17dp"
        android:textSize="12dp"
        android:text="Covid Fighter"
        android:textColor="#000000"
        android:textStyle="bold"
        android:fontFamily="@font/helveticaneue_medium"
        />
    <TextView
        android:id="@+id/problemItemIntro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="17dp"
        android:textSize="8dp"
        android:text="Use your skills to solve the issue of Covid 19 with Lorem Ipsum... text"
        android:layout_marginRight="17dp"
        android:textColor="#707070"
        android:textStyle="bold"
        android:fontFamily="@font/robotolight"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/problemdlbg"
        android:text="Download"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:textSize="8dp"
        android:fontFamily="@font/helveticaneue_regular"

        />


</LinearLayout>